<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/MainFragment"
    >

    <fragment
        android:id="@+id/MainFragment"
        android:name="com.rawa.notes.ui.feature.main.MainFragment"
        android:label="@string/main_fragment_label"
        tools:layout="@layout/fragment_main"
        >
        <action
            android:id="@+id/action_MainFragment_to_detailFragment"
            app:destination="@id/detailFragment"
            />
        <action
            android:id="@+id/action_MainFragment_to_addNote"
            app:destination="@id/addNote"
            />
        <argument
            android:name="noteDeleted"
            android:defaultValue="@null"
            app:argType="com.rawa.notes.ui.feature.main.NoteDeleted"
            app:nullable="true"
            />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.rawa.notes.ui.feature.detail.DetailFragment"
        android:label="{title}"
        tools:layout="@layout/fragment_detail"
        >
        <argument
            android:name="title"
            app:argType="string"
            />
        <argument
            android:name="detailNavArg"
            app:argType="com.rawa.notes.ui.feature.detail.DetailArg"
            />
        <action
            android:id="@+id/action_detailFragment_to_MainFragment"
            app:destination="@id/MainFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/MainFragment"
            app:popUpToInclusive="true"
            >
            <argument
                android:name="noteDeleted"
                app:argType="com.rawa.notes.ui.feature.main.NoteDeleted"
                app:nullable="true"
                />
        </action>
    </fragment>
    <fragment
        android:id="@+id/addNote"
        android:name="com.rawa.notes.ui.feature.addnote.AddNoteFragment"
        android:label="@string/fragment_addnote_label"
        tools:layout="@layout/fragment_addnote"
        >
        <deepLink app:uri="notes://add_note" />
    </fragment>
</navigation>
